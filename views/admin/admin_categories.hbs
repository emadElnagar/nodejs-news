<section class="py-5">
  <div class="container">
    <div class="d-flex justify-content-start">
      <a href="/articles/create-category" class="d-flex text-dark btn btn-warning rounded-pill p-1 px-3 text-capitalize">
        <span>add</span>
        <span class="material-icons">add</span>
      </a>
    </div>
    <h1 class="text-capitalize text-center mb-4">categories</h1>
    <table class="w-100 text-capitalize">
      <thead>
        <tr class="bg-warning border border-1">
          <th class="p-2">title</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          {{#each this}}
            {{#if this.title}}
              <tr>
                <td class="p-2 border border-top-0 d-flex justify-content-between">
                  <div class="d-flex justify-content-center flex-column">
                    <span>{{this.title}}</span>
                  </div>
                  <div>
                    <!-- Button trigger modal -->
                    <button type="button" class="d-inline-flex btn btn-warning rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#edit-{{this.slug}}">
                      <span>edit</span>
                      <span class="material-icons ms-1">edit</span>
                    </button>
                    <!-- Edit Modal -->
                    <div class="modal fade" id="edit-{{this.slug}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">update category</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body fs-5">
                            <form class="d-inline-flex w-100" method="post" action="update/{{this.slug}}">
                              <input type="text" id="title" name="title" value="{{this.title}}" class="w-100">
                              <input type="submit" id="categoryBtn" class="d-inline-flex text-capitalize btn btn-warning rounded-pill px-3" value="update">
                            </form>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="text-capitalize btn btn-light rounded-pill px-3" data-bs-dismiss="modal">cancel</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Button trigger modal -->
                    <button type="button" class="d-inline-flex btn btn-danger rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#{{this.slug}}">
                      <span>delete</span>
                      <span class="material-icons ms-1">delete</span>
                    </button>
                    <!-- Delete Modal -->
                    <div class="modal fade" id="{{this.slug}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">delete confirmation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body fs-5">
                            are you sure you want to delete category <b>({{this.title}})</b> ?
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="text-capitalize btn btn-light rounded-pill px-3" data-bs-dismiss="modal">cancel</button>
                            <form class="d-inline-flex" method="post" action="/admin/delete/category/{{this.slug}}">
                              <button class="text-capitalize btn btn-danger rounded-pill px-3">
                                delete
                              </button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            {{/if}}
          {{/each}}
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
