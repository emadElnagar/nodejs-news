{{#if user.isAdmin}}
  <section class="py-5 bg-light">
    <div class="container">
      <div class="d-flex justify-content-between">
        <a href="/articles/new" class="btn btn-warning px-4 d-flex">
          <span class="material-icons me-2">add</span>
          create new article
        </a>
        <a href="/articles/create-category" class="btn btn-info px-4 d-flex">
          <span class="material-icons me-2">add</span>
          create new category
        </a>
      </div>
    </div>
  </section>
{{/if}}

<section class="py-5">
  <div class="container">
    <div class="row">
      {{#each articles}}
        {{#each this}}
          {{#if this.image}}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
              <a class="text-dark" href="/articles/{{this.slug}}">
                <div class="card">
                  <img
                    src="{{this.image}}"
                    class="card-img-top img-thumbnail" 
                    alt="oops! it's problem showing your photo"
                  >
                  <div class="card-body">
                    <h2 class="text-capitalize">{{this.title}}</h2>
                    <div class="d-flex justify-content-start text-capitalize">
                      <span>category: {{this.category}}</span>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          {{/if}}
        {{/each}}
      {{/each}}
    </div>
  </div>
</section>
