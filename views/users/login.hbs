<section class="py-5">
  <div class="container">
    <form class="auth-form shadow mx-auto px-4 py-5" method="post">
      
      <h1 class="text-capitalize text-center mb-4">login</h1>
      
      <div class="field d-flex flex-column-reverse mt-2">
        <input type="email" name="email" class="w-100" required>
        <label for="email">email</label>
      </div>

      <div class="field d-flex flex-column-reverse mt-2">
        <input type="password" name="password" class="w-100" required>
        <label for="password">password</label>
      </div>

      <input type="submit" value="login" class="btn btn-warning w-100 mt-3">

      <div class="mt-3">
        <p>don't have an account? <a href="/users/register">register</a></p>
      </div>

    </form>
    {{#each messages}}
      <div class="d-flex justify-content-center">
        <div class="alert alert-danger text-center mt-3 form-alert" role="alert">
          {{this}}
        </div>
      </div>
    {{/each}}
  </div>
</section>
